---
"$extends":
  - base/normal.json
when:
  description:
    - Call 'abort' function define in core.rc.
    - This test is to illustrate the usage of the fuction.
  source:
    - ${COMMANDUNIT_DEPENDENCIES_ROOT}/bud/lib/core.rc
    - ${COMMANDUNIT_HOSTFSROOT_MOUNTPOINT}/${COMMANDUNIT_PWD}/src/main/scripts/target_lib.rc
  cmd: abort
  args:
    - HELLO ABORT
then:
  exitCode:
    - NOT_EQUAL
    - 0
  stdout:
    absent:
      - REGEX:.+
  stderr:
    present:
      - REGEX:HELLO ABORT
      - REGEX:main
      - REGEX:abort
